{
  "packages": ["packages/*"],
  "ignoreChanges": ["packages/*/test/**", "**/*.md", "**/*.mdx"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["master", "alpha", "beta", "alpha-upgrade"],
      "message": "chore(release): publish new versions"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
